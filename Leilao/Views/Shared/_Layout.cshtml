<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - leilão</title>
    <link rel="shortcut icon" type="image/png" href="~/Content/img/logo.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
</head>
<body>
    <div class="row" style=" height: 96%;">
        <div class="container">
            <header class="col-md-2">

                <div style="    text-align: center;">
                    <img src="~/Content/img/logo.png" width="60" />
                </div>
                <h3 class="text-center brand"><b>LeiloaCasa</b></h3>
                <div class="mt-20">
                    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-house-door" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M7.646 1.146a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 .146.354v7a.5.5 0 0 1-.5.5H9.5a.5.5 0 0 1-.5-.5v-4H7v4a.5.5 0 0 1-.5.5H2a.5.5 0 0 1-.5-.5v-7a.5.5 0 0 1 .146-.354l6-6zM2.5 7.707V14H6v-4a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 .5.5v4h3.5V7.707L8 2.207l-5.5 5.5z" />
                        <path fill-rule="evenodd" d="M13 2.5V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                    </svg> @Html.ActionLink("Home", "Index", "Auction", new { }, new { @class = "item-menu selected" })
                </div>
                <div class="mt-20">
                    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-clipboard-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
                        <path fill-rule="evenodd" d="M9.5 1h-3a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3zm4.354 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                    </svg>
                    @Html.ActionLink("Leiloar Casa", "Create", "Product", new { }, new { @class = "item-menu" })
                </div>
            </header>
            <div class="col-md-10">
                @RenderBody()

            </div>
        </div>
    </div>
    <div class="container">
        <footer>
            <p>&copy; @DateTime.Now.Year - Criado por Regina Sobral</p>
        </footer>
    </div>



    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.maskMoney.js"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        $(".money").maskMoney({
            allowZero: true, // se permite 0
            thousands: '', // separador milhar
            decimal: ',', // separador decimal
            precision: 2, // quantas casas decimais são permitidas
            affixesStay: false // Defina se o prefixo e o sufixo permanecerão no valor do campo depois que o usuário sair do campo
        });
    </script>
</body>
</html>
